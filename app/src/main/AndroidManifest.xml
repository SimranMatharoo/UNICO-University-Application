<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unico">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="UNICO"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FullImage"></activity>
        <activity
            android:name=".Events"
            android:hardwareAccelerated="false"
            android:largeHeap="true">
           </activity>
        <activity android:name=".extraPage" />
        <activity android:name=".extraPageStudent" />
        <activity android:name=".TeacherSignIn" />
        <activity android:name=".StudentSignUp" />
        <activity android:name=".TeacherSignUp" />
        <activity
            android:name=".StudentHome"
            android:label="@string/title_activity_student_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeacherHome"
            android:label="@string/title_activity_teacher_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StudentSignIn" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>